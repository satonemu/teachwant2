<div class="container">
	<div class="row">
		<h3>項目編集</h3>
			<%= form_for [:admin,@item] do |f| %>
				<% if @item.errors.any? %>
					<h4 class="message-error"><%= @item.errors.count %> 件のエラーのため内容は保存できません。</h4>
						<ul>
							<% @item.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
				<% end %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<%= f.submit '変更を保存する', class: "btn btn-primary"%>
				<%= link_to "戻る", admin_items_path, class: "btn btn-primary" %>
			<% end %>
	</div>
</div>