<div class="container">
	<div class="row">
		<h3>ジャンル一覧///追加</h3>
		<% if flash[:success] %>
  			<p class="alert alert-success" role="alert"><%= flash[:success] %></p>
		<% end %>
			<%= form_for [:admin,@genre] do |f| %>
				<% if @genre.errors.any? %>
					<h4 class="message-error"><%= @genre.errors.count %> 件のエラーのため内容は保存できません。</h4>
						<ul>
							<% @genre.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
				<% end %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<%= f.submit '追加', class: "btn btn-primary"%>
			<% end %>
		<table class="table table-striped">
			<thead>
				<th>ジャンル</th>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>