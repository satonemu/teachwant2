<h1>ユーザー編集画面</h1>
<%= form_for [:public, @user] do |f| %>
	<h3>名前</h3>
	<%= f.text_field :name %>

	<h3>メールアドレス</h3>
	<%= f.text_field :email %>

	<h3>性別</h3>
	<%= f.select :sex, User.sexes.keys , { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
	<p>
	    <%= f.submit "編集を保存する", class: "btn btn-success" %>
    </p>

<% end %>

