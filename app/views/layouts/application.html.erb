<!DOCTYPE html>
<html>
  <head>
    <title>Teachwant2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-default navbar-main">
          <div class="container">
          <div class="navbar-header">
            <h1 class="navbar-brand">
              <%#= link_to "Teachwant2", root_path, class: "btn btn-primary"%>
            </h1>
          </div>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li>
                  ようこそ、<%= current_user.name %>さん!!
                </li>
                <li>
                  <%= link_to "投稿ページ",public_posts_index_path %>
                </li>
                <li>
                  <%= link_to "マイページ", public_user_path(current_user) %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>
            <% elsif admin_admin_user_signed_in? %>
                <li>
                  <%= link_to "ジャンル一覧", admin_genres_path %>
                </li>
                <li>
                  <%= link_to "項目一覧", admin_items_path %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_admin_user_session_path, method: :delete %>
                </li>
            <% else %>
                <li>
                  <%= link_to "ユーザー新規会員登録", new_user_registration_path %>
                </li>
                <li>
                  <%= link_to "ユーザーログイン", new_user_session_path %>
                </li>
                <li>
                  <%= link_to "管理者新規会員登録", new_admin_admin_user_registration_path %>
                </li>
                <li>
                  <%= link_to "管理者ログイン", new_admin_admin_user_session_path %>
                </li>

            <% end %>
          </ul>
        </div>
        </nav>
      </header>
    <%= yield %>
  </body>
</html>
